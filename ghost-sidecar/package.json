{
  "name": "ghost-sidecar",
  "version": "0.0.1",
  "bin": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "prebuild": "tsc && node dist/compress.js",
    "build": "pkg . --targets node22-macos-arm64 --output ../src-tauri/binaries/ghost-sidecar-aarch64-apple-darwin",
    "build:all": "pkg . --targets node22-macos-arm64,node22-linux-x64,node22-win-x64"
  },
  "pkg": {
    "assets": [
      "original.zip"
    ],
    "outputPath": "../src-tauri/binaries"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/node": "^22.8.5",
    "@yao-pkg/pkg": "^6.9.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.0",
    "archiver": "^7.0.1",
    "extract-zip": "^2.0.1"
  },
  "dependencies": {
    "ghost-cli": "^1.28.3"
  }
}